{
    "kind": "collectionType",
    "collectionName": "rates",
    "info": {
      "singularName": "rate",
      "pluralName": "rates",
      "displayName": "Rate",
      "description": "Dynamic service rates"
    },
    "options": {
      "draftAndPublish": false
    },
    "pluginOptions": {
      "content-manager": { "visible": true },
      "content-type-builder": { "visible": true }
    },
    "attributes": {
      "name": {
        "type": "string",
        "required": true
      },
      "price": {
        "type": "decimal",
        "required": true
      },
      "timeEstimation": {
        "type": "decimal"
      },
      "service": {
        "type": "relation",
        "relation": "manyToOne",
        "target": "plugin::strapi-appointments.service",
        "required": true
      },
      "conditions": {
        "type": "dynamiczone",
        "components": ["rate.price-condition"],
        "required": true
      }
    }
  }
  